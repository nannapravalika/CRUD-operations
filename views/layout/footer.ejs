


<script>
     
    const industryForm = document.getElementById('industryForm');
    const industryDataForm = document.getElementById('industryDataForm');
    const saveIndustryBtn = document.getElementById('saveIndustryBtn');
    const cancelIndustryBtn = document.getElementById('cancelIndustryBtn');
    const industryTableBody = document.querySelector('#industryTable tbody');

    

    // Clear the form fields
    function clearIndustryForm() {
        industryDataForm.reset();
    }

    // Show the form to edit an existing industry
    function editIndustry(id, title, icon, image, active) {
        document.getElementById('formTitle').innerText = 'Edit Industry';
        industryForm.style.display = 'block';
        document.getElementById('title').value = title;
        document.getElementById('iconPreview').src = `data:image/jpeg;base64,${icon}`; // Set icon preview
        document.getElementById('imagePreview').src = `data:image/jpeg;base64,${image}`; // Set image preview
        document.getElementById('active').checked = active;
        saveIndustryBtn.dataset.id = id; // Store industry ID in a custom attribute
    }

    // Hide the form when the Cancel button is clicked
    cancelIndustryBtn.addEventListener('click', () => {
        industryForm.style.display = 'none';
    });

    // Save edited industry data
    saveIndustryBtn.addEventListener('click', (e) => {
        e.preventDefault();
        const id = saveIndustryBtn.dataset.id;
        const title = document.getElementById('title').value;
        const icon = document.getElementById('icon').files[0];
        const image = document.getElementById('image').files[0];
        const active = document.getElementById('active').checked;
        // Do something with the edited data (e.g., send it to the server)
        console.log(`Editing industry ${id}: title=${title}, icon=${icon.name}, image=${image.name}, active=${active}`);
        industryForm.style.display = 'none';
    });

