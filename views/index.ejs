<%- include('layout/header') %>
<div class="container">
    <!-- Display session messages -->
    <% if (message) { %>
    <div class="alert alert-success" role="alert">
        <%= message %>
    </div>
    <% } %>

    <div class="row my-4">
        <% if (message){ %>
            <div class="alert alert-dismissible fade show alert-<%=message.type %>" role="alert">
                <button class="btn-close " type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                <strong><%= message.message %></strong>
            </div>
        <% } %> 
        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <!-- Button to redirect to add industry form -->
            <a href="/addfilter" class="btn btn-warning me-md-2">Add filter</a>
        
            <!-- Button to redirect to add industry form -->
            <a href="/add" class="btn btn-warning me-md-2">Add Industry</a>
        </div>

        <div class="col-lg-12">
            <br><br>
            <div class="table-responsive">
                <% if (industries.length > 0) { %>
                    <table id="industryTable" class="table table-stripped text-center">
                        <thead>
                            <tr class="table-warning">
                                <th>ID</th>
                                <th>Title</th>
                                <th>Icon</th>
                                <th>Image</th>
                                <th>Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% industries.forEach((row, index) => { %>
                                <tr class="align-middle">
                                    <td><%= index %></td>
                                    <td><%= row.title %></td>
                                    <td><img src="<%= row.icon.url %>" width="100" class="img-thumbnail" alt="Icon Image"/></td>
                                    <td><img src="<%= row.image.url %>" width="100" class="img-thumbnail" alt="Main Image"/></td>
                                    <td><%= row.active ? 'Yes' : 'No' %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Industries Found in Database!</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
